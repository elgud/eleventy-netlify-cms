<div class="mb-5">
  {% for post in postslist | reverse %}
    <div class="card mb-3
          {% if post.url == url %} card-active{% endif %}">
      <a href="{{ post.url | url }}" class="cd-main-hover d-sm-flex my-0 pb-1 pt-1 text-decoration-none">
        <img class="d-none d-sm-block ms-1 rounded img-thumbnail" src="{{ '/img/wormhole.jpg' | url }}"
                        alt="picture of a galactic wormhole" style="max-height: 100px;">
        <div class="ms-4 mt-2">
          <div class="card-title mb-2 d-flex align-items-center">
            <h5 class=" mb-0">{% if post.data.title %}{{ post.data.title }}
                        {% else %}<code>{{ post.url }}</code>{% endif %}</h5>
            <time class="fw-light text-muted" datetime="{{ post.date | htmlDateString }}">
              <small>{{ post.date | readableDate }}</small>
            </time>
          </div>
          <div class="card-body py-0">
            <p class="card-text fs-6 fw-light">{% if post.data.description %}   
                                  {{post.data.description}}{% endif %}</p>
          </div>
        </div>
      </a>
      <div class="card-footer">
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
