<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <!-- bootstrap -->
    <link rel="stylesheet" href="{{ '/css/bootstrap/css/bootstrap.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body class="text-body p-4">
    <header class="mt-4 mb-4">

      {% include "navbar.njk" %}

      <!-- hero image -->
      <div class="container-fluid pb-4">
        <div class="ratio ratio-21x9">
            <img src="{{ '/img/swirl.jpg' | url }}"  class="d-block w-100" alt="a swirl">
        </div>
      </div>

    </header>

    <main class="container-fluid">
      <div {% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </div>
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->

    <script src="{{ '/css/bootstrap/js/bootstrap.bundle.min.js' | url }}"></script>
  </body>
</html>

